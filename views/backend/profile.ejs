<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/local.css" />
</head>
<body>
<div id="wrapper">
    <%- include('nav'); -%>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit My Profile</h1>
            </div>
        </div>
        <% if (success) { %>
        <div class="row">
            <div class="col-lg-6">
                <div class="alert alert-success">
                    <strong>Well done!</strong> Your profile has been updated successfully.
                </div>
            </div>
        </div>
        <% } %>
        <% if (error) { %>
        <div class="row">
            <div class="col-lg-6">
                <div class="alert alert-danger">
                    <strong>Error!</strong> <%= error %>
                </div>
            </div>
        </div>
        <% } %>
        <div class="row">
            <div class="col-lg-6">
                <form action="" method="post" role="form">
                    <div class="form-group">
                        <label>Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" name="name" value="<%= data.name %>" maxlength="40" placeholder="Your name">
                        <p class="help-block">Enter your first name here. ( This field is required. )</p>
                    </div>
                    <div class="form-group">
                        <label>Surname <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" name="surname" value="<%= data.surname %>" maxlength="40" placeholder="Your surname">
                        <p class="help-block">Enter your last name here. ( This field is required. )</p>
                    </div>
                    <div class="form-group">
                        <label>E-mail <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" name="email" value="<%= data.email %>" maxlength="200" placeholder="Your E-mail">
                        <p class="help-block">Enter your primary E-mail address here. ( This field is required. )</p>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select class="form-control" name="countryId">
                            <option value="">Сhoose your country</option>
                            <% countries.forEach(function(country) { %>
                                <% if (data.countryId === country.id) { %>
                                    <option value="<%= country.id %>" selected><%= country.name %></option>
                                <% } else { %>
                                    <option value="<%= country.id %>"><%= country.name %></option>
                                <% } %>
                            <% }); %>
                        </select>
                        <p class="help-block">Choose a country of which you are a citizen.</p>
                    </div>
                    <div class="form-group">
                        <label>Phone <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" name="phone" value="<%= data.phone %>" maxlength="15" placeholder="Your Phone">
                        <p class="help-block">Enter your cell phone number here. The number must match this format: (XXX) XXX-XX-XX. ( This field is required. )</p>
                    </div>
                    <div class="form-group">
                        <label>Birthday</label>
                        <input class="form-control" type="text" name="birthday" value="<%= data.birthday %>" maxlength="10" placeholder="Your birthday">
                        <p class="help-block">Enter your date of birth here. The date must match this format: YYYY-MM-DD</p>
                    </div>
                    <div class="form-group">
                        <label>About you</label>
                        <textarea class="form-control" name="about" rows="5"><%= data.aboutMe %></textarea>
                        <p class="help-block">Tell a little about yourself here.</p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save Сhanges</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/menu.js"></script>
<script src="https://unpkg.com/imask"></script>
<script src="/javascripts/profile.js"></script>
</body>
</html>